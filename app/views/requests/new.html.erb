<h2>New Request</h2>
<%= form_for [@user, @venue, @request] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :soundcloud %>
  <%= f.text_field :soundcloud %>

  <%= f.label :facebook %>
  <%= f.text_field :facebook %>

  <%= f.label :venue %>
  <!-- Could also have an instance variable @venues = Venue.all, and use it here -->
  <%= f.collection_select(:venue_id, Venue.all, :id, :name, prompt: true) %>

  <%= f.submit "Create" %>
<% end %>
