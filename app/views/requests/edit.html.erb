<h2>Edit <%= @request.name %> </h2>

<%= form_for [@user, @venue, @request] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :soundcloud %>
  <%= f.text_field :soundcloud %>

  <%= f.label :facebook %>
  <%= f.text_field :facebook %>

  <%= f.label :venue %>
  <%= f.collection_select(:venue_id, Venue.all, :id, :name, prompt: true) %>

  <%= f.submit "Edit" %>
<% end %>


<%= form_for @request, url: "/requests/#{@request.id}", method: :delete do |f| %>
  <% f.submit "Delete", class: "btn-delete" %>
<% end %>
