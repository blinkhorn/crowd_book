<h2>Edit <%= @user.username %> </h2>

<%= form_for @user, url: "/users/#{@user.id}", method: :put do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password_digest %>
  <%= f.text_field :password_digest %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.submit "Edit" %>
<% end %>


<%= form_for @user, url: "/users/#{@user.id}", method: :delete do |f| %>
  <% f.submit "Delete", class: "btn-delete" %>
<% end %>
